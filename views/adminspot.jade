div.details(data-id='#{spot._id}')
	h1.name.
		#{spot.name}

	.description.
		#{spot.description}

	.tip
		span.glyphicon.glyphicon-star-empty(aria-hidden='true')
		| #{spot.tip}

	.row
		.cost.col-xs-6
			span.glyphicon.glyphicon-usd(aria-hidden='true')
			| #{spot.cost}

		.map-link.col-xs-6
			span.glyphicon.glyphicon-pushpin(aria-hidden='true')
			| #{spot.mapURL}

	button(type='button', class='remove-spot-btn btn btn-default')
		.glyphicon.glyphicon-minus(aria-hidden='true')
		| Remove spot

.location
